{
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "unique-blog-post-url"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Guardian of the Digital Realm: Web Security",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "A brief summary of the blog post...",
          "allowTargetBlank": true,
          "multi": "paragraph"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "author_name": {
        "type": "Text",
        "config": {
          "label": "Author Name",
          "placeholder": "Jese Leos"
        }
      },
      "author_avatar": {
        "type": "Image",
        "config": {
          "label": "Author Avatar",
          "constraint": {
            "width": 200,
            "height": 200
          },
          "thumbnails": []
        }
      },
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Publish Date",
          "placeholder": "Select publish date"
        }
      },
      "badge_type": {
        "type": "Select",
        "config": {
          "label": "Badge Type",
          "options": ["Tutorial", "Article"],
          "default_value": "Article"
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Text",
              "config": {
                "label": "Tag",
                "placeholder": "Code"
              }
            }
          }
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "Write your blog post content here...",
          "allowTargetBlank": true,
          "multi": "paragraph,heading2,heading3,strong,em,hyperlink,list-item,o-list-item,preformatted"
        }
      }
    }
  }
}
